Gem::Specification.new do |s|
  s.name = "filestojs"
  s.version = "1.0.1"
  s.authors = ["Daniel Sim"]
  s.date = %q{2011-10-28}
  s.description = 'Takes a directory of text files and formats them as string values in a global javascript object.'
  s.summary = %Q{FilesToJs will take a directory of text files and formats them as string values in a global javascript object. An advantage of this is the ability to use the same directory of templates for both back end and front end rendering, and have all your templates in a single compressed transfer.}
  s.email = 'dan@explodingbox.com'
  s.files = ['README.rdoc', 'lib/FilesToJS.rb']
  s.homepage = 'https://github.com/danielsim/FilesToJS'
  s.has_rdoc = true
end